<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade"/>
        <variable
            name="disable"
            type="Boolean" />
        <variable
            name="delete"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRecorder"
            android:background="#B3000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.ekoapp.ekosdk.uikit.components.EkoRippleBackground
            android:id="@+id/rippleBackGround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rbColor="@color/upstraColorBase"
            app:rbRippleAmount="2"
            app:rbDuration="3000"
            app:rbScale="6"
            >

        </com.ekoapp.ekosdk.uikit.components.EkoRippleBackground>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvRelease"/>

            <TextView
                android:id="@+id/tvRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release_to_send"
                android:textColor="@color/upstraColorBase"
                textColorShade="@{ColorShade.SHADE3}"
                style="@style/TextStyleEkoCaption"
                android:layout_marginBottom="@dimen/thirty_two"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnRecordAudio"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnRecordAudio"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ekoTintShade="@{disable ? ColorShade.SHADE3 : ColorShade.DEFAULT}"
                ekoTintColor="@{disable ? @color/upstraColorBase : @color/white}"
                backgroundColorShade="@{ColorShade.SHADE1}"
                ekoBackgroundColor="@{disable ? @color/upstraColorBase : @color/upstraColorPrimary}"
                style="@style/CircularAvatarStyle"
                android:layout_marginBottom="@dimen/sixteen"
                android:src="@drawable/ic_uikit_voice_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:rotation="@{delete ? -15 : 0}"
                ekoTintShade="@{delete ? ColorShade.DEFAULT : ColorShade.SHADE3}"
                ekoTintColor="@{delete ? @color/white : @color/upstraColorBase}"
                backgroundColorShade="@{ColorShade.DEFAULT}"
                ekoBackgroundColor="@{delete ? @color/upstraColorAlert : @color/upstraColorBase}"
                style="@style/CircularAvatarStyle"
                android:src="@drawable/ic_uikit_delete"
                android:layout_marginStart="@dimen/twenty_seven"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnRecordAudio"
                app:layout_constraintBottom_toBottomOf="@id/btnRecordAudio" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</layout>