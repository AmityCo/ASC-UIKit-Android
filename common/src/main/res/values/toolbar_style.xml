<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarLeftTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_upstra_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/sixteen</item>
        <item name="android:textColor">@color/upstraColorBase</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/sixteen</item>
    </style>

    <style name="ToolBarRightTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/ts_upstra_body</item>
        <item name="android:textColor">@color/upstraColorPrimary</item>
    </style>

    <style name="ToolBarLeftDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/twenty</item>
    </style>

    <style name="BaseToolBarStyle">
        <item name="leftDrawableStyle">@style/ToolBarLeftDrawableStyle</item>
        <item name="leftTextViewStyle">@style/ToolBarLeftTextStyle</item>
        <item name="rightTextViewStyle">@style/ToolBarRightTextStyle</item>
    </style>
</resources>