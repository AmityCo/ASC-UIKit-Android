<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade" />

        <variable
            name="viewModel"
            type="com.ekoapp.ekosdk.uikit.community.setting.EkoCommunitySettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setting.EkoCommunitySettingsActivity">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            ekoBackgroundColor="@{@color/upstraColorBase}"
            backgroundColorShade="@{ColorShade.SHADE4}" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupEditProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/ivEdit"
            app:layout_constraintTop_toTopOf="@id/ivEdit"
            app:layout_constraintBottom_toBottomOf="@id/ivEdit"
            android:visibility="@{viewModel.isAdmin() ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="ivEdit,tvEditProfile,ivArrow,divider2" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/twenty_four"
            android:layout_height="@dimen/forty_eight"
            android:paddingVertical="@dimen/twelve"
            android:src="@drawable/ic_uikit_edit_profile"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginTop="@dimen/eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1" />

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_eight"
            android:text="@string/edit_profile"
            android:layout_marginStart="@dimen/eleven"
            android:gravity="center_vertical"
            style="@style/TextStyleEkoBody"
            android:textColor="@color/upstraColorBase"
            app:layout_constraintStart_toEndOf="@id/ivEdit"
            app:layout_constraintTop_toTopOf="@id/ivEdit"
            app:layout_constraintBottom_toBottomOf="@id/ivEdit"
            app:layout_constraintEnd_toStartOf="@id/ivArrow" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/twenty_four"
            android:layout_height="@dimen/twenty_four"
            android:paddingHorizontal="@dimen/eight"
            android:paddingVertical="@dimen/six"
            android:src="@drawable/ic_uikit_chevron_right"
            android:layout_marginEnd="@dimen/eighteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivEdit"
            app:layout_constraintBottom_toBottomOf="@id/ivEdit" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvEditProfile"
            android:layout_marginHorizontal="@dimen/sixteen"
            ekoBackgroundColor="@{@color/upstraColorBase}"
            backgroundColorShade="@{ColorShade.SHADE4}" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMembers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/ivMembers"
            app:layout_constraintTop_toTopOf="@id/ivMembers"
            app:layout_constraintBottom_toBottomOf="@id/ivMembers"
            app:constraint_referenced_ids="ivMembers,tvMembers,tvMembersCount,ivArrow1" />

        <ImageView
            android:id="@+id/ivMembers"
            android:layout_width="@dimen/twenty_four"
            android:layout_height="@dimen/forty_eight"
            android:paddingVertical="@dimen/twelve"
            android:src="@drawable/ic_uikit_members"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginTop="@dimen/four"
            app:layout_goneMarginTop="@dimen/eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

        <TextView
            android:id="@+id/tvMembers"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_eight"
            android:text="@string/members_capital"
            android:layout_marginStart="@dimen/eleven"
            android:gravity="center_vertical"
            style="@style/TextStyleEkoBody"
            android:textColor="@color/upstraColorBase"
            app:layout_constraintStart_toEndOf="@id/ivMembers"
            app:layout_constraintTop_toTopOf="@id/ivMembers"
            app:layout_constraintBottom_toBottomOf="@id/ivMembers"
            app:layout_constraintEnd_toStartOf="@id/tvMembersCount" />

        <TextView
            android:id="@+id/tvMembersCount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_eight"
            android:layout_marginEnd="@dimen/twelve"
            android:text="@{viewModel.membersCount}"
            android:gravity="center_vertical"
            style="@style/TextStyleEkoBody"
            android:textColor="@color/upstraColorBase"
            textColorShade="@{ColorShade.SHADE1}"
            app:layout_constraintTop_toTopOf="@id/ivMembers"
            app:layout_constraintBottom_toBottomOf="@id/ivMembers"
            app:layout_constraintStart_toEndOf="@id/tvMembers"
            app:layout_constraintEnd_toStartOf="@id/ivArrow1" />

        <ImageView
            android:id="@+id/ivArrow1"
            android:layout_width="@dimen/twenty_four"
            android:layout_height="@dimen/twenty_four"
            android:paddingHorizontal="@dimen/eight"
            android:paddingVertical="@dimen/six"
            android:src="@drawable/ic_uikit_chevron_right"
            android:layout_marginEnd="@dimen/eighteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivMembers"
            app:layout_constraintBottom_toBottomOf="@id/ivMembers" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvMembers"
            android:layout_marginHorizontal="@dimen/sixteen"
            ekoBackgroundColor="@{@color/upstraColorBase}"
            backgroundColorShade="@{ColorShade.SHADE4}" />

        <TextView
            android:id="@+id/tvLeaveCommunity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_eight"
            android:layout_marginHorizontal="@dimen/sixteen"
            android:layout_marginTop="@dimen/four"
            android:text="@{viewModel.isAdmin() ? @string/close_community : @string/leave_community}"
            android:gravity="center_vertical"
            style="@style/TextStyleEkoBody"
            android:textColor="@color/upstraColorAlert"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvLeaveCommunity"
            android:layout_marginHorizontal="@dimen/sixteen"
            ekoBackgroundColor="@{@color/upstraColorBase}"
            backgroundColorShade="@{ColorShade.SHADE4}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>