<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/communityNameContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginStart="@dimen/eight"
            app:layout_constraintBottom_toBottomOf="@id/avCommunityProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avCommunityProfile"
            app:layout_constraintTop_toTopOf="@id/avCommunityProfile">

            <TextView
                android:id="@+id/tvCommunityName"
                style="@style/TextStyleEkoBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/four"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@{community.getDisplayName()}"
                android:textColor="@color/amityColorBase"
                tools:text="Community Name" />
        </FrameLayout>

        <ImageView
            android:id="@+id/avCommunityProfile"
            style="@style/CircularAvatarStyle"
            ekoFillColor="@{@color/amityColorPrimary}"
            ekoFillShade="@{ColorShade.SHADE3}"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            android:padding="@dimen/six"
            android:scaleType="centerInside"
            android:src="@drawable/amity_ic_default_community_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade" />

        <variable
            name="community"
            type="com.ekoapp.ekosdk.community.EkoCommunity" />
    </data>
</layout>