<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade" />

        <import type="android.view.View" />

        <variable
            name="ekoCommunity"
            type="com.ekoapp.ekosdk.community.EkoCommunity" />

        <variable
            name="avatarUrl"
            type="String" />

        <variable
            name="listener"
            type="com.ekoapp.ekosdk.uikit.community.mycommunity.listener.IMyCommunityItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onCommunitySelected(ekoCommunity)}">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            style="@style/CircularAvatarStyle"
            backgroundColorShade="@{ColorShade.SHADE3}"
            ekoBackgroundColor="@{@color/upstraColorPrimary}"
            imageUrl="@{avatarUrl}"
            placeHolder="@{@drawable/ic_uikit_default_community_avatar_small}"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            android:layout_marginStart="@dimen/sixteen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCount"
            style="@style/TextStyleEkoTitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twelve"
            android:textColor="@color/upstraColorHighlight"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar" />

        <FrameLayout
            android:id="@+id/communityNameContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fourteen"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvCount"
            app:layout_constraintTop_toTopOf="@id/ivAvatar">

            <TextView
                android:id="@+id/tvCommName"
                style="@style/TextStyleEkoBodyBold"
                safeText="@{ekoCommunity.displayName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@{ekoCommunity.official ? @drawable/ic_uikit_verified : null}"
                android:drawablePadding="@dimen/four"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/upstraColorBase"
                tools:text="Community Name" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvCategory"
            style="@style/TextStyleEkoCaption"
            textColorShade="@{ColorShade.SHADE1}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/four"
            android:text="@string/general"
            android:textColor="@color/upstraColorBase"
            app:layout_constrainedWidth="true" />

        <TextView
            android:id="@+id/tvDot"
            style="@style/TextStyleEkoCaption"
            textColorShade="@{ColorShade.SHADE1}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bullet"
            android:textColor="@color/upstraColorBase" />

        <TextView
            android:id="@+id/tvMembersCount"
            style="@style/TextStyleEkoCaption"
            textColorShade="@{ColorShade.SHADE1}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/four"
            android:paddingEnd="@dimen/sixteen"
            android:textColor="@color/upstraColorBase" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/four"
            app:constraint_referenced_ids="tvCategory,tvDot,tvMembersCount"
            app:flow_horizontalAlign="start"
            app:flow_horizontalBias="0"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="3"
            app:flow_verticalAlign="top"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/communityNameContainer"
            app:layout_constraintTop_toBottomOf="@+id/communityNameContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>