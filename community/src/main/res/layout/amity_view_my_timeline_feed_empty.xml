<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEmptyFeed"
            style="@style/TextStyleEkoBodyBold"
            textColorShade="@{ColorShade.SHADE3}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amity_empty_feed"
            android:textColor="@color/amityColorBase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStartPost"
            style="@style/TextStyleEkoTitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amity_start_post"
            android:textColor="@color/amityColorBase"
            app:layout_constraintStart_toStartOf="@id/tvEmptyFeed"
            app:layout_constraintTop_toBottomOf="@id/tvEmptyFeed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>