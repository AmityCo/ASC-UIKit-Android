<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ekoapp.ekosdk.uikit.common.views.ColorShade" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            style="@style/CircularAvatarStyle"
            ekoBackgroundColor="@{@color/upstraColorPrimary}"
            backgroundColorShade="@{ColorShade.SHADE3}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCross"
            android:layout_width="@dimen/sixteen"
            android:layout_height="@dimen/sixteen"
            android:scaleType="centerInside"
            android:src="@drawable/ic_uikit_cross_white"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:background="@color/upstraColorBase"
            android:alpha="0.5"
            app:layout_constraintTop_toTopOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            android:gravity="center"
            style="@style/TextStyleEkoCaption"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:textColor="@color/upstraColorBase" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>