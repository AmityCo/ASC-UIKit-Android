<resources>

    <style name="EkoCommunityHeaderStyle">
        <item name="avatarStyle">@style/EkoAvatarStyle</item>
        <item name="displayNameStyle">@style/EkoCommunityHeaderDisplayNameStyle</item>
    </style>

    <style name="EkoCommunityHeaderDisplayNameStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="EkoCommunityNameStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="EkoCommunityFollowerStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorWhite</item>
    </style>

    <style name="EkoRecommendedCommunityStyle">
        <item name="avatarStyle">@style/EkoAvatarStyle</item>
        <item name="communityNameStyle">@style/EkoCommunityNameStyle</item>
        <item name="followerStyle">@style/EkoCommunityFollowerStyle</item>
    </style>

    <style name="EkoTrendingCommunityStyle">
        <item name="avatarStyle">@style/EkoAvatarStyle</item>
        <item name="communityNameStyle">@style/EkoCommunityNameStyle</item>
        <item name="followerStyle">@style/EkoCommunityFollowerStyle</item>
    </style>

    <style name="EkoTrendingCommunityNameStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="EkoTrendingCommunityDescriptionStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="EkoTrendingCommunityFollowerStyle">
        <item name="textStyle">normal</item>
    </style>

    <style name="EkoTrendingCommunityFollowButtonStyle">
        <item name="buttonTextColor">@color/amityColorWhite</item>
        <item name="backgroundColor">@color/amityColorBlack</item>
        <item name="buttonType">solid</item>
    </style>

    <style name="EkoCHTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amity_text_size_headline</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/amity_eighteen</item>
        <item name="android:layout_marginLeft">@dimen/amity_eighteen</item>
        <item name="android:layout_marginEnd">@dimen/amity_eighteen</item>
        <item name="android:layout_marginRight">@dimen/amity_eighteen</item>
    </style>

    <style name="EkoCommunityCategoryNameStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="EkoCommunitySubCategoryNameStyle">
        <item name="textStyle">normal</item>
        <item name="textColor">@color/amityColorBlack</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/amity_forty_eight</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="FollowButtonStyle" parent="BaseButtonStyle">
        <item name="shapeAppearanceOverlay">@style/FollowButtonAppearance</item>
        <item name="backgroundTint">@color/amity_button_bg_selector</item>
        <item name="android:textSize">@dimen/amity_text_size_body</item>
    </style>

    <style name="FollowButtonAppearance">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">@dimen/amity_six</item>
        <item name="strokeColor">@color/amityColorBlack</item>
    </style>

    <style name="EnterCommunityStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amity_text_size_title</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="PublicTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/amity_padding_m1</item>
        <item name="android:layout_marginLeft">@dimen/amity_padding_m1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PublicDescriptionTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amity_text_size_body</item>
        <item name="android:textColor">@color/amityColorBase</item>
    </style>

    <style name="RadioButtonStyle" parent="EkoRadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/amity_thirty_eight</item>
    </style>

    <style name="AlphabetHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/amity_twenty_eight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/amity_text_size_body</item>
        <item name="android:paddingStart">@dimen/amity_padding_m1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectMembersSubTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amity_text_size_caption</item>
    </style>


    <style name="EkoFeedPostTimeStyle">
        <item name="textStyle">normal</item>
    </style>

    <style name="EkoFeedPostLikeStyle">
        <item name="android:textSize">@dimen/amity_text_size_caption</item>
    </style>

    <style name="ImagePreviewTheme" parent="Base.Theme.EkoApp"></style>

    <style name="NewsFeedItemTextStyle">
        <item name="android:textSize">@dimen/amity_text_size_body</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/amityColorBase</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/amityColorHighlight</item>
    </style>

    <style name="CommunityHomeToolBarStyle" parent="BaseToolBarStyle">
        <item name="leftDrawableStyle">@style/CommunityToolbarLeftDrawableStyle</item>
        <item name="leftTextViewStyle">@style/CommunityToolbarLeftTextStyle</item>
    </style>

    <style name="CommunityToolbarLeftDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CommunityToolbarLeftTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amity_text_size_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/amity_padding_m1</item>
        <item name="android:textColor">@color/amityColorBase</item>
    </style>

</resources>
